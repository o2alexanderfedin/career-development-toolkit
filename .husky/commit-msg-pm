#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

# Read the commit message
COMMIT_MSG=$(cat "$1")

# Colors for output
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
RED='\033[0;31m'
NC='\033[0m' # No Color

# Check for keywords indicating a fix for a significant issue
if echo "$COMMIT_MSG" | grep -q -i "fix:\|hotfix:\|workaround:\|patch:\|emergency"; then
    if echo "$COMMIT_MSG" | grep -q -i "critical\|urgent\|severe\|security\|vulnerability\|crash\|corrupt\|data loss"; then
        echo "${BLUE}----------------------------------------${NC}"
        echo "${BLUE}ðŸ”„ Critical Issue Fix Detected${NC}"
        echo "${BLUE}----------------------------------------${NC}"
        echo "${YELLOW}You appear to be fixing a significant issue.${NC}"
        echo "Consider creating a post-mortem to document:"
        echo "  - The root cause and impact of this issue"
        echo "  - How you detected and diagnosed it"
        echo "  - The solution approach and validation"
        echo ""
        echo "  - Create from template: ${GREEN}cp .claude/templates/post_mortem_template.md .claude/post_mortems/code/$(date +%Y-%m-%d)_$(echo $COMMIT_MSG | grep -o '[a-z0-9\-]*' | head -n1).md${NC}"
        echo "${BLUE}----------------------------------------${NC}"
    fi
fi